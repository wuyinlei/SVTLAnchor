<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:id="@+id/activity_tab_layout"
                                                 android:fitsSystemWindows="true"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        app:layout_behavior="com.mingchu.svtlanchor.FlingBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.mingchu.svtlanchor.FlyBanner
                    android:id="@+id/fly_banner"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/iv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="该产品可以免费试用，你想参加么"
                        android:textColor="#2c2c2c"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_below="@+id/iv_title"
                        android:layout_marginTop="19dp"
                        android:text="需要积分：100"
                        android:textColor="#ae234f"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_vvv"
                        android:layout_toRightOf="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_title"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="10dp"
                        android:text="¥20"
                        android:textColor="#ae234f"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_title"
                        android:layout_marginTop="19dp"
                        android:layout_alignParentRight="true"
                        android:text="数量:50"
                        android:layout_marginRight="30dp"
                        android:textColor="#ae234f"
                        android:textSize="16sp"/>

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tv_time"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/num"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="试用申请已经结束,试用体验中"
                            android:textColor="#ff6601"
                            android:textSize="20sp"/>


                    </RelativeLayout>



                    <View
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#f4f4f4"
                       />

                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <ImageView
                        android:id="@+id/topic_close"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentStart="true"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/topic_close"
                        android:layout_toRightOf="@+id/topic_close"
                        android:text="返回"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"/>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/anchor_tagContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff88ff"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorAccent"
                app:tabTextColor="@color/colorPrimary"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </android.support.design.widget.AppBarLayout>


    <com.mingchu.svtlanchor.ScrollChangedScrollView
        android:id="@+id/anchor_bodyContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:background="#ffffff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorAccent"

                    android:text="试用反馈"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#e3e3e3"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_one"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorAccent"

                    android:text="产品介绍"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#e3e3e3"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

               <WebView
                   android:id="@+id/web_view"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   tools:ignore="WebViewLayout"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorAccent"

                    android:text="品鉴规则"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#e3e3e3"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_three"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorAccent"

                    android:text="推荐菜谱"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#e3e3e3"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_four"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorAccent"

                    android:text="品鉴申请"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#e3e3e3"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_five"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorAccent"

                    android:text="试用者名单"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#e3e3e3"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_six"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorAccent"

                    android:text="全部评论"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#e3e3e3"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_seven"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"/>

            </LinearLayout>

        </LinearLayout>
    </com.mingchu.svtlanchor.ScrollChangedScrollView>

</android.support.design.widget.CoordinatorLayout>