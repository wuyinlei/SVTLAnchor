<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:fitsSystemWindows="true"
              android:background="#f4f4f4"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_recommend_one"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="#fff"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_content_one"
            android:layout_width="108dp"
            android:layout_height="90dp"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_content_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:textColor="@color/gold"
                    android:textSize="12sp"
                    android:text="人物"/>

                <View
                    android:id="@+id/vv_line"
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:background="#898989"/>

                <TextView
                    android:id="@+id/tv_content_time_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    android:text="03.23"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_content_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxEms="28"
                android:maxLines="2"
                android:textColor="#2d2d2d"
                android:textSize="15sp"
                android:text="米其林三星餐厅的顶级名厨米其林三星餐厅的顶级名厨米其林三星餐厅的顶级名厨米其林三星餐厅的顶级名厨"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>